{
    "compilerOptions": {
        "types": [
            "node"
        ],
        "esModuleInterop": true,
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist", // Output directory
        "rootDir": ".", // Root directory for input files
        "sourceMap": true, // Enable sourcemaps
        "strict": true // Enable all strict type-checking options
    },
    "include": [
        "index.ts",
        "libs/**/*.ts",
        "processors/**/*.ts",
        "helpers/**/*.ts"
    ],
    "exclude": [
        "dist" // Exclude compiled output
    ]
}